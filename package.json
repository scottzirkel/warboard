{
  "name": "army-tracker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "eslint . --max-warnings=50",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate": "npm run lint && npm run typecheck && npm run test && npm run build",
    "validate:data": "npx tsx scripts/bsdata/validate-faction.ts --all",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "bsdata:parse": "npx tsx scripts/bsdata/parse-catalogue.ts",
    "bsdata:generate": "npx tsx scripts/bsdata/generate-faction.ts",
    "bsdata:sync": "npm run bsdata:parse -- --all && npm run bsdata:generate -- --all",
    "bsdata:sync:faction": "npm run bsdata:parse -- $1 && npm run bsdata:generate -- $1"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@eslint/eslintrc": "^3.3.3",
    "@libsql/client": "^0.17.0",
    "@prisma/adapter-libsql": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@serwist/next": "^9.5.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/archiver": "^7.0.0",
    "archiver": "^7.0.1",
    "next": "^16.1.4",
    "next-auth": "^4.24.13",
    "prisma": "^7.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "serwist": "^9.5.3",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "fast-xml-parser": "^5.3.3",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  }
}
